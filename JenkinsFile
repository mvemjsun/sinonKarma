
pipeline {
    agent any
    stages {
        stage('Dependencies') {
            steps {
                echo "Building in workspace ${WORKSPACE} ${BRANCH_NAME}"
                sh 'npm ci'
            }
        }

        
        stage("Lint+Test") {
            parallel {
                stage('Lint') {
                    steps {
                        echo 'Parallel: Linting'
                    }
                }

                stage('Test') {
                    steps {
                        milestone label: 'Reached Test Milestone', ordinal: 1
                        echo 'Parallel: Testing'
                        sh 'npm run test'
                    }
                }
            }
        }
    }
}