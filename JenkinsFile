
pipeline {
    agent any
    stages {
        stage('Dependencies') {
            steps {
                echo "Building in workspace ${WORKSPACE} ${GIT_BRANCH}"
                sh 'npm ci'
            }
        }

        stage("Lint+Test") {
            stages {
                    stage('Lint') {
                        steps {
                            milestone label: 'Reached Test Milestone', ordinal: 1
                            echo 'Parallel: Linting'
                        }
                    }

                    stage('Test') {
                        steps {
                            echo 'Parallel: Testing'
                            sh 'npm run test'
                        }
                    }
            }
        }
    }
}