
pipeline {
    agent any
    stages {
        stage('Dependencies') {
            steps {
                echo "Building in workspace ${WORKSPACE}"
                sh 'npm ci'
            }
        }

        
        stage("Test") {
            parallel {
                stage('Lint') {
                    steps {
                        echo 'Parallel: Linting'
                    }
                }

                stage('Test') {
                    steps {
                        echo 'Parallel: Testing'
                        sh 'npm run test'
                    }
                }
            }
        }
    }
}