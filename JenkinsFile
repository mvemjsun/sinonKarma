
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo "Building in workspace ${WORKSPACE}"
            }
        }

        stage("Test") {
            parallel {
                stage('Lint') {
                    steps {
                        echo 'Parallel: Linting'
                    }
                }

                stage('Test') {
                    steps {
                        echo 'Parallel: Testing'
                        sh 'npm run test'
                    }

                    post {
                        always {}
                    }
                }
            }
        }
    }

    post {
            always {}
    }
}